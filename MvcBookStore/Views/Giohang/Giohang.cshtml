@using MvcBookStore.Models
@model List<Giohang>
@{
    ViewBag.Title = "Giohang";
    Layout = "~/Views/Shared/_LayoutUser.cshtml";
}

<div class="container-fluid pt-5">
    <div class="row px-xl-5">
        <div class="col-lg-8 table-responsive mb-5">
            <table class="table table-bordered text-center mb-0">
                <thead class="bg-secondary text-dark">
                    <tr>
                        <th colspan="2">Sách</th>
                        <th>Đơn giá</th>
                        <th>Số lượng</th>
                        <th>Thành tiền</th>
                        <th colspan="2">Chức năng</th>
                    </tr>
                </thead>
                <tbody class="align-middle">
                    @foreach (var item in Model)
                    {
                    <tr>
                        <td class="align-middle"><img src="~/img/@item.sAnhbia" alt="" style="width: 100px;"></td>
                        <td class="align-middle">@item.sTensach</td>
                        <td class="align-middle">@String.Format("{0:0,0}", item.dDongia)</td>
                        @using (Html.BeginForm("Capnhatgiohang", "Giohang", new { @iMaSp = item.iMasach}))
                        { 
                        <td class="align-middle">
                            <div class="input-group quantity mx-auto" style="width: 100px;">
                                <div class="input-group-btn">
                                    <button style="background-color: #26c6da " class="btn btn-sm btn-info btn-minus">
                                        <i class="fa fa-minus"></i>
                                    </button>
                                </div>
                                <input type="text" class="form-control form-control-sm bg-secondary text-center" name="txtSoluong" value="@item.iSoluong">
                                <div class="input-group-btn">
                                    <button style="background-color: #26c6da " class="btn btn-sm btn-info btn-plus">
                                        <i class="fa fa-plus"></i>
                                    </button>
                                </div>
                            </div>
                        </td>
                        <td class="align-middle">@String.Format("{0:0,0}", item.dThanhtien)</td>
                        <td class="align-middle"><a style="background-color: #26c6da " class="btn btn-sm btn-info btn-plus" href="@Url.Action("Details", "BookStore", new { id = item.iMasach})"><i class="fa fa-eye" aria-hidden="true"></i></a></td>
                        <td class="align-middle"><a style="background-color: #26c6da " class="btn btn-sm btn-info btn-plus" href="@Url.Action("Xoagiohang", "Giohang", new { @iMaSp = item.iMasach })"><i class="fa fa-trash" aria-hidden="true"></i></a>
                                                 <a style="background-color: #26c6da; margin-top:3px; " class="btn btn-sm btn-info btn-plus"><i class="fa fa-check" aria-hidden="true"></i>
                        </td>
                        //<td class="align-middle"><a style="background-color: #26c6da " class="btn btn-sm btn-info btn-plus"><i class="fa fa-check" aria-hidden="true"></i></a></td>
                        }
                    </tr>
                    }
                    <tr style="font-weight: bold; text-align:right;">
                        <td colspan="9">
                            <button type="button" class="btn btn-outline-info" >
                                @Html.ActionLink("Xóa tất cả", "Xoatatcagiohang", null, new { @class = "text-dark" })
                            </button>
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
        <div class="col-lg-4">
            <form class="mb-5" action="">
                <div class="input-group">
                    <input type="text" class="form-control p-4" placeholder="Nhập mã...">
                    <div class="input-group-append">
                        <button class="btn btn-info">Mã khuyến mãi</button>
                    </div>
                </div>
            </form>
            <div class="card border-secondary mb-5">
                <div class="card-header bg-secondary border-0">
                    <h4 class="font-weight-semi-bold m-0">Đơn hàng</h4>
                </div>
                <div class="card-body">
                    <div class="d-flex justify-content-between mb-3 pt-1">
                        <h6 class="font-weight-medium">Số lượng sách mua:</h6>
                        <h6 class="font-weight-medium">@ViewBag.Tongsoluong</h6>
                    </div>
                    <div class="d-flex justify-content-between">
                        <h6 class="font-weight-medium">Phí vận chuyển</h6>
                        <h6 class="font-weight-medium">free</h6>
                    </div>
                </div>
                <div class="card-footer border-secondary bg-transparent">
                    <div class="d-flex justify-content-between mt-2">
                        <h5 class="font-weight-bold">Tổng tiền</h5>
                        <h5 class="font-weight-bold">@String.Format("{0:0,0}", ViewBag.Tongtien) VNĐ</h5>
                    </div>
                    <button class="btn btn-outline-info" style="width:100%; line-height:40px">
                        @Html.ActionLink("ĐẶT HÀNG", "Dathang", "Giohang", null, new { @class = "text-dark" })
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>